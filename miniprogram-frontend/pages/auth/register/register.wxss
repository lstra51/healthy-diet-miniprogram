.page {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card {
  width: 80%;
  max-width: 360px;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 48rpx 40rpx;
  box-sizing: border-box;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.label {
  font-size: 26rpx;
  color: #555555;
  margin-bottom: 12rpx;
}

.input {
  width: 100%;
  padding: 16rpx 20rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  border: 1rpx solid #dddddd;
  background-color: #fafafa;
  font-size: 26rpx;
}

.button-group {
  margin-top: 24rpx;
}

.btn {
  width: 100%;
  margin-top: 16rpx;
  font-size: 28rpx;
}

.btn-primary {
  background-color: #07c160;
  color: #ffffff;
}

.btn-plain {
  background-color: #ffffff;
  color: #333333;
  border: 1rpx solid #dddddd;
}
